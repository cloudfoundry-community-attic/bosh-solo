#!/usr/bin/env bash

# Tails all *err*.log files for jobs and monit (via scripts/helper/list_logs)
# Any arguments passed directly to tail command

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

cd $(dirname $0)/..
release_path=$(pwd)
scripts=${release_path}/scripts

logs=$(${scripts}/helpers/list_logs errors)
echo $logs
tail $logs $@